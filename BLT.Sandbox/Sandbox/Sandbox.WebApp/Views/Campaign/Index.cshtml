@model Sandbox.WebApp.ViewModels.Campaign.IndexVM

@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model.Campaigns)
{
   <h2>@item.GroupName</h2>
   <div class="row">
       @foreach (var groupsCampaign in item.Campaigns)
       {
           <div class="col-xs-12 col-sm-6 col-md-3">
               <a class="fill-div" href="/Campaign/Details?name=@groupsCampaign.Name">
                   <!-- todo [img url @groupsCampaign.ImageUrl] -->
                   <img src="/Content/200x175.png" />
                   <span class="text-overlay" onclick="window.location.href='/Campaign/Details?name=@HttpUtility.UrlEncode(groupsCampaign.Name)'">@groupsCampaign.Name</span>
               </a>
           </div>
       }
   </div>
}
<script src="/Scripts/text-overlay.js" type="text/javascript"></script>

