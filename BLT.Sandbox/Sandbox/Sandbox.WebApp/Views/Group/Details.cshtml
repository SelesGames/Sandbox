@model Sandbox.WebApp.ViewModels.Group.DetailsVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Group</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
           Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Logo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LogoUrl)
        </dd>

        <dt>
            Last Project Update
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LatestProjectTime)
        </dd>
    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Campaigns)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Campaign", new { name = item.Name }, null) |
                @Html.ActionLink("Details", "Details", "Campaign", new { name = item.Name }, null) |
                @Html.ActionLink("Delete", "Delete", "Campaign", new { name = item.Name }, null)
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Name }) |
    @Html.ActionLink("Back to List", "Index")
</p>
