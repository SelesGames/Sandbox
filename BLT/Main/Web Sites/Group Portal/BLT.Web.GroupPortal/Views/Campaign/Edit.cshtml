@model BLT.ClientExtranet.Data.Models.Campaign

@{
    ViewBag.Title = "Edit " + @Model.Name;
}
<h2>Edit Campaign</h2>
<div class="row">
    @using (Html.BeginForm("Edit", "Campaign", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-xs-12">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
                <li><a href="#groups" data-toggle="tab">Groups</a></li>
                <li><a href="#adv" data-toggle="tab">Advanced</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active" id="info">
                    <div class="col-xs-12">
                        <label for="Name" class="control-label">Campaign Name</label>
                        <div>
                            @Html.TextBoxFor(model => model.Name, new { @class = "control col-xs-12" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="col-xs-12 space-col">
                        <label for="image" class="control-label">Campaign Image</label>
                        <div>
                            <input type="file" name="image" id="image" />
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="groups">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <a class="fill-div gray-box" href="">
                            <img src="/Content/box.png" />
                            @* todo: get group name from session *@
                            <span class="text-overlay">Marvel</span>
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <a class="fill-div lightgray-box" href="">
                            <img src="/Content/box.png" />
                            <span class="text-overlay glyphicon glyphicon-plus-sign"></span>
                            <span class="text-overlay-bottom">Add Group</span>
                        </a>
                    </div>
                </div>
                <div class="tab-pane fade" id="adv">
                    <div class="col-xs-12 col-md-5">
                        <h3 style="margin-top: 0px;">Delete this campaign</h3>
                        <b>Once you delete this campaign, it will be deleted forever</b>
                    </div>
                    <div class="col-xs-12 col-md-7">
                        <a class="btn btn-danger" style="margin-top:16px;" href="#">Delete Campaign</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 space-col">
            <input type="submit" value="Save" class="btn btn-primary pull-right" />
            <a class="btn btn-default pull-right" style="margin-right:12px;">Cancel</a>
        </div>
    }
</div>
<script src="/Scripts/text-overlay.js" type="text/javascript"></script>
<script src="/Scripts/image-chooser.js" type="text/javascript"></script>
<script type="text/javascript">

</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
