@model BLT.ClientExtranet.Data.Models.Group

@{
    ViewBag.Title = "New Group";
}

<h2>New Group</h2>
<div class="row">
    @using (Html.BeginForm("Create", "Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-xs-12 space-col-top">
            <label for="Name" class="control-label">Group Name</label>
            <div>
                @Html.TextBoxFor(model => model.Name, new { @class = "control col-xs-12" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="col-xs-12 space-col">
            <label for="image" class="control-label">Campaign Image</label>
            <div>
                <input type="file" name="image" id="image" />
            </div>
        </div>

        <div class="col-xs-12 space-col">
            <label class="control-label">Users</label>
            <div>
                <input type="text" class="control" name="add-user-full-name" placeholder="name" />
                <input type="email" class="control" name="control" placeholder="email" />
                <input type="submit" name="add-button" value="Add" class="btn btn-primary btn-sm" />
            </div>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
                @if (null != @Model)
                {
                    foreach (var user in @Model.Users)
                    {
                        <tr>
                            <td>user.FullName</td>
                            <td>user.Email</td>
                            <td>
                                <a href="#">Edit</a>
                                <a href="#">Remove</a>
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <td>User 1</td>
                    <td>user1@email.com</td>
                    <td>
                        <a href="#">Edit</a>
                        <a href="#">Remove</a>
                    </td>
                </tr>
                <tr>
                    <td>User 2</td>
                    <td>user2@email.com</td>
                    <td>
                        <a href="#">Edit</a>
                        <a href="#">Remove</a>
                    </td>
                </tr>
            </table>

        </div>
        <div class="col-xs-12 space-col">
            <input type="submit" value="Save" class="btn btn-primary pull-right" />
            <a class="btn btn-default pull-right" style="margin-right:12px;">Cancel</a>
        </div>
    }

</div>

<script src="/Scripts/image-chooser.js" type="text/javascript"></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
